                <option value="f">Fahrenheit</option>
            </select>
            <button>Search</button>
             </form>
        <p id="message-1"></p>
        <p id="message-2"></p>
    </div>

    {{>footer}}

    <script src="/js/app.js"></script>
</body>
</html>